<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.e_governance">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EGovernance"
        tools:targetApi="31">
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="Registration Portal"
            android:parentActivityName=".Login"/>

        <activity
            android:name=".Birth_reg"
            android:exported="false"
            android:label="Birth Registration"
            android:parentActivityName=".Home"/>
        <activity
            android:name=".Death_reg"
            android:exported="false"
            android:label="Death Registartion"
            android:parentActivityName=".Home"/>

        <activity
            android:name=".Marriage_reg"
            android:exported="false"
            android:label="Marriage Registration"
            android:parentActivityName=".Home"/>
        <activity
            android:name=".Migration_reg"
            android:exported="false"
            android:label="Migration Registration"
            android:parentActivityName=".Home"/>

        <activity
            android:name=".Register"
            android:exported="false"
            android:parentActivityName=".Login"
            android:label="Signup"/>

        <activity
            android:name=".Login"
            android:exported="false"
            android:label="Login"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>